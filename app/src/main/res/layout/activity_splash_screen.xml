<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.SplashScreenActivity">

    <View
        android:id="@+id/gradientPreloaderView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/gradient_preloader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:visibility="visible"
        android:id="@+id/app_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_above="@id/text_logo"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/app_logo"
        app:srcCompat="@mipmap/logo_transparent_img_only" />

    <ImageView
        android:id="@+id/text_logo"
        android:layout_width="match_parent"
        android:layout_marginStart="100dp"
        android:layout_height="67dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/text_logo"
        app:srcCompat="@mipmap/text_logo" />

    <ImageView
        android:id="@+id/cafoscari_logo"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:contentDescription="@string/ca_foscari_logo"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_logo"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/cafoscarilogo_w"/>

    <TextView
        android:id="@+id/label_cafoscari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/universit_ca_foscari_di_venezia"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cafoscari_logo"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        />


    <TextView
        android:id="@+id/label_sviluppata"
        android:textAlignment="center"
        android:layout_below="@id/label_cafoscari"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sviluppata_da"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/label_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/filippo_camoli"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/label_sviluppata"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        />
</RelativeLayout>